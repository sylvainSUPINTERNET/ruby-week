<h1>Tweets</h1>


<% @posts.each do |post| %>

<div class="card">
  <div class="card-block">
    <h4 class="card-title"><%= post.title %></h4>
    <h6 class="card-subtitle mb-2 text-muted"><%= post.updated_at.strftime('%F %T') %></h6>
    <p class="pull-right"><%= post.user %></p>
    <p class="card-text"><%= post.body %></p>
    <a href="/hashtags_list/<%= post.hashtag %>" class="card-link">#<%= post.hashtag %></a>
    <br>
    <br>

       <% if user_signed_in? %>

       <a class="btn btn-primary" href="/post/like/<%= post.id %>" >Like</a><%= post.like %> 
       <%else%>
      	Like : <%= post.like %> 
       <%end%>
				
   
  </div>
</div>
<hr>
<% end %>





